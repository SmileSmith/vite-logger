{
  "name": "vite-logger",
  "version": "0.0.1",
  "description": "unified vite pluginâ€™s logger fork from vite",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsc -w -p . --incremental --skipLibCheck",
    "build": "rm -rf dist && tsc -p . --skipLibCheck",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "prepublishOnly": "yarn build && yarn changelog",
    "postpublish": "git add CHANGELOG.md && git commit -m 'chore: changelog [ci skip]'"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "vite",
    "rollup",
    "plugin",
    "install",
    "auto"
  ],
  "author": "SmileSmith",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SmileSmith/vite-logger"
  },
  "bugs": {
    "url": "https://github.com/SmileSmith/vite-logger/issues"
  },
  "homepage": "https://github.com/SmileSmith/vite-logger/tree/master/#readme",
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write"
    ],
    "*.ts": [
      "prettier --parser=typescript --write"
    ]
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "readline": "^1.3.0"
  },
  "devDependencies": {
    "@types/node": "^14.0.14",
    "conventional-changelog-cli": "^2.0.34",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "typescript": "^4.1.2",
    "yorkie": "^2.0.0"
  }
}
